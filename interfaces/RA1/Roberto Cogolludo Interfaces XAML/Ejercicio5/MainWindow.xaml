<Window x:Class="Ejercicio5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Nombre de usuario" Margin="10"/>
            <TextBox Name="txtUsername" Width="200" Margin="10"/>

            <TextBlock Text="Contraseña" Margin="10"/>
            <PasswordBox Name="pwdPassword" Width="200" Margin="10"/>

            <Button Content="Iniciar Sesión"
                    Width="100" Height="30" Margin="10"
                    Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
